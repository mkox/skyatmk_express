extends layout

block content
  h1= title

  form(method='POST')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg

  if actor_list.length
    ul
      each actor in actor_list
        li #{actor.actor.displayName} - #{actor.actor.description}

  else
    p There are no actors.
